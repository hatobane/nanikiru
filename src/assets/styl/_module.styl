/*
  card
  ※麻雀牌をcssスプライトで出力
*/
$characters = 'we' 'ws' 'ww' 'wn' 'dw' 'db' 'dr'

.m-cards > i,
.m-card
    background-image url($imgPathCards)
    background-size 1000% 400%
    display inline-block
    font-size 0
    height 100%
    max-height 128px
    max-width 84px
    width 7.14285714286%
    overflow hidden
    &::after
      content ""
      display block
      padding-top 152.380952381%
    for i in (1..9)
      &.m{i}
        background-position (8400*(i - 1)/756)% 0
      &.s{i}
        background-position (8400*(i - 1)/756)% 33.3333333333%
      &.p{i}
        background-position (8400*(i - 1)/756)% 66.6666666666%
    &.m5r
      background-position 100% 0
    &.s5r
      background-position 100% 33.3333333333%
    &.p5r
      background-position 100% 66.6666666666%
    for char, i in $characters
      &.{char}
        background-position (8400*i/756)% 99.9999999999%

.m-cards
  font-size 0

.m-card
  height 32px
  margin 0 3px
  width 21px

/*
  icomoon
*/
.icomoon
  font-family 'icomoon' !important
  font-style normal
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  font-variant normal
  font-weight normal
  line-height 1
  text-transform none
  speak none

/*
  icon__btn
*/
.m-iconBtn
  align-items center
  background-color $blue03
  border 2px solid transparent
  border-radius 50%
  color #fff
  cursor pointer
  display flex
  justify-content center
  transition all 0.2s ease-out
  & > i
    opacity 0.8

/*
  radio
*/
.m-radio
  display none
  & + label
    align-items center
    background-color #fff
    border 1px solid $blue01
    cursor pointer
    display flex
    font-weight bold
    font-size 16px
    justify-content center
    transition all 0.2s ease-out
    &:hover
      border-color $blue03
  &:checked + label
    background-color $blue02

/*
  select
*/
.m-select
  border 1px solid $blue01
  outline none
  option
    font-size 16px
    font-weight bold
    background-color #fff
    &:checked
      background-color $blue02 !important
    &:hover
      background-color $blue03

/*
  range
*/
.m-range
  width 300px
  & + label
    font-size 20px
    font-weight bold
    display block