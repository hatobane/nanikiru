/*
  icomoon
*/
.m-icomoon
  font-family 'icomoon' !important
  font-style normal
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  font-variant normal
  font-weight normal
  line-height 1
  text-transform none
  speak none

/*
  title
*/
.m-ttl
  font-family "Roboto", sans-serif
  border-bottom 2px dashed $blue01
  font-size 18px
  font-weight bold
  letter-spacing 0.02em
  padding-bottom 3px
  &:before
    @extend .m-icomoon
    content "\e903"
    font-size 20px
    font-weight bold
    padding-right 2px
    position relative
    top 2px

/*
  button
*/
.m-btn
  appearance none
  border-radius 6px
  font-size 24px
  letter-spacing 0.04em
  margin-right 15px
  outline none
  padding 14px 28px
  transition all 0.2s ease-out

.m-btn--able
  @extends .m-btn
  background-color lighten($blue01, 8)
  border 2px solid $blue03
  cursor pointer
  &:hover
    background-color $blue02

.m-btn--disabled
  @extends .m-btn
  cursor not-allowed
  background-color #eee
  border 2px solid #ddd

/*
  icon__btn
*/
.m-iconBtn
  align-items center
  background-color $blue03
  border 2px solid transparent
  border-radius 50%
  color #fff
  cursor pointer
  display flex
  justify-content center
  transition all 0.2s ease-out
  & > i
    opacity 0.8

/*
  form text
*/
.m-text,
.m-textarea
  appearance none
  background #fff
  border 1px solid $blue01
  border-radius 8px
  font-size 16px
  outline none
  padding 4px 5px

/*
  form radio
*/
.m-radio
  display none
  & + label
    align-items center
    background-color #fff
    border 1px solid $blue01
    cursor pointer
    display flex
    font-weight bold
    font-size 16px
    justify-content center
    transition all 0.2s ease-out
    &:hover
      border-color $blue03
  &:checked + label
    background-color $blue02

/*
  form range
*/
.m-range
  max-width 300px
  width 100%
  & + label
    font-size 20px
    font-weight bold
    display block

/*
  form select
*/
.m-select
  border 1px solid $blue01
  outline none
  option
    font-size 16px
    font-weight bold
    background-color #fff
    &:checked
      background-color $blue02 !important
    &:hover
      background-color $blue03

/*
  card
  ※麻雀牌をcssスプライトで出力
*/
$characters = 'we' 'ws' 'ww' 'wn' 'dw' 'db' 'dr'

.m-cards > i,
.m-card
    background-image url($imgPathCards)
    background-size 1000% 400%
    display inline-block
    font-size 0
    height 100%
    max-height 128px
    max-width 84px
    width 7.14285714286%
    overflow hidden
    &:after
      content ""
      display block
      padding-top 152.380952381%
    for i in (1..9)
      &.m{i}
        background-position (8400*(i - 1)/756)% 0
      &.s{i}
        background-position (8400*(i - 1)/756)% 33.3333333333%
      &.p{i}
        background-position (8400*(i - 1)/756)% 66.6666666666%
    &.m5r
      background-position 100% 0
    &.s5r
      background-position 100% 33.3333333333%
    &.p5r
      background-position 100% 66.6666666666%
    for char, i in $characters
      &.{char}
        background-position (8400*i/756)% 99.9999999999%

.m-cards
  font-size 0

.m-card
  height 32px
  margin 0 3px
  width 21px

/*
  modal
*/
.m-modal
  align-items center
  background-color rgba(0, 0, 0, .5)
  cursor pointer
  display flex
  height 100%
  justify-content center
  left 0
  position fixed
  top 0
  width 100%
  z-index $indexLevel6

.m-modal__content
  background-color #fff
  border 2px solid $blue03
  border-radius 8px
  padding 15px 10px
  position absolute
  width 300px
  z-index $indexLevel6 + 1
  & > h1
    font-size 16px
    border-bottom 2px dashed $blue01

.m-modal__close
  @extends .m-iconBtn
  font-size 26px
  height 40px
  position absolute
  right -20px
  top -20px
  width 40px