/*
  body
*/
html
  background-color $white
  height: 100%

body
  color $black
  font-family "Hiragino Kaku Gothic ProN", "ヒラギノ角ゴ ProN W3", "メイリオ", Meiryo, "ＭＳ Ｐゴシック", "MS PGothic", sans-serif
  font-size 16px
  line-height 1.7

/*
  header
*/
.header
  background-color $blue01
  box-shadow 0 3px 5px $blue01
  font-family: "Roboto", sans-serif
  min-height 66px
  position fixed
  top 0
  width 100%
  z-index $indexLevel1
  &:after
    background $blue02
    content ""
    display block
    height 2px
    width 100%
  & > h1
    font-size 32px
    font-weight bold
    letter-spacing 0.03em
    padding 5px 0
    text-align center

/*
  content
*/
.header + div
  margin 0 auto
  max-width 640px
  padding 86px 1% 100px

.header + .post
  padding-bottom 250px

h3
  font-size 16px
  font-weight bold
  margin 15px 10px

/*
  post
*/
.post__set
  background-color lighten($blue01, 6)
  border-radius 10px
  margin-bottom 30px
  padding 20px 2% 10px

  .m-cards
    margin 20px 0
    cursor pointer
    opacity 1
    &:hover
      i
        opacity .5
    i
      transition all 0.2s ease-out
      width 58px
      &.active
        &:after
          background-color rgba(red, .2)
          content ""
          display block
          height 100%
          width 100%
          z-index 1
      &:hover
        opacity 1

.post__set__radioWrap
  display flex
  flex-wrap wrap
  label
    border-radius 50%
    height 80px
    margin-bottom 10px
    margin-right 10px
    width 80px

.post__set__radioWrap + .post__set__radioWrap
  border-top 2px dashed #fff
  padding-top 10px

.post__set__rangeWrap
  label
    align-items center
    display flex
    i
      align-items center
      background-color #fff
      border 1px solid $blue01
      color $blue03
      cursor pointer
      display flex
      height 50px
      justify-content center
      margin-left 20px
      transition all 0.2s ease-out
      width 50px
      & + i
        margin-left 5px
      &:hover
        background-color $blue02

.post__display
  background-color rgba(black, .8)
  bottom 0
  color #fff
  left 0
  position fixed
  -webkit-overflow-scrolling touch
  overflow-x auto
  white-space nowrap
  width 100%
  z-index $indexLevel5
  > div
    width 640px
    margin 0 auto

.post__display__status
  align-items flex-end
  font-weight bold
  font-size 16px
  display flex
  flex-wrap wrap
  margin-top 10px
  padding 0 1%
  li
    border 1px solid #fff
    border-radius 4px
    margin 0 8px 5px 0
    padding 1px 6px
  .post__display__ttl
    border none
  .post__display__status__dora
    align-items flex-end
    border none
    display flex
    .m-card
      display block
      height 48px
      margin-left 10px
      width 31.5px

.post__display__cards
  margin-top 10px
  padding 0 1%
  width 640px
  & > i
    @extends .m-cards > i
    position relative
    &:hover
      &:before
        align-items center
        background-color rgba(#000, .5)
        content "\f00d"
        font-family "icomoon" !important
        font-size 18px
        display flex
        justify-content center
        line-height 1
        height 100%
        left 0
        position absolute
        top 0
        width 100%

/*
  account
*/
.account
  bottom 10px
  position fixed
  left 10px
  z-index $indexLevel4
.account__btn,
.account__display
  @extends .m-iconBtn
  box-shadow -1px 1px 5px darken($blue01, 20)
  font-size 40px
  height 100px
  width 100px
  &:hover
    border-color darken($blue02, 50)

.account__display
  overflow hidden
  & > img
    min-height 100%
    max-width 100%
    &:hover
      opacity 0.9

/*
  footer
*/
.footer
  triangle(150px, 150px, bottom-right, $blue01)
  bottom 0
  right 0
  position fixed
  text-align right
  transition all 0.2s ease
  z-index $indexLevel2
  &.active
    border-color transparent transparent lighten($blue02, 12) transparent
    border-width 0 0 100vh 100vw

.footer__btn
  @extends .m-iconBtn
  bottom 10px
  font-size 40px
  height 55px
  right 10px
  position fixed
  width 55px
  &:hover
    border-color #fff

.footer__copy
  bottom 143px
  font-family "Roboto", sans-serif
  font-size 16px
  font-weight bold
  right -56px
  position fixed
  transform rotate(-90deg)